

<div>
	<div class="media">

<p><%= render partial: 'posts/new', locals: {path: {controller: "posts", action: (:create)}} %></p>
</br>

</div>
<section class="col-md-6">
<% @posts.each do |post| %>

<div class="media">
        <div class="media-left">
          <a href="#">
            <img class="media-object"><%= link_to(avatar_for(post.user), post.user) %>
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= post.user.username %> diyor ki;</h4>
          <p><%= post.text %> </p>
          <p><a href="#">Replay</a> <a href="#">Share</a> 
           
          	 <% if post.user == current_user %>
          	 <%= link_to 'Edit', edit_post_path(post) %>
          	 <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>


 <% end %>


          </p>
         

        </div>
        <% end %>
      </div>
      </section>
      </div>



